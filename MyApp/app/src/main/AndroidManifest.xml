<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.ravi.com.myapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginBoardScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.LoginScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RegisterScreen"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.HomeActivity" />
        <activity android:name=".activity.UserProfileActivity" />
        <activity android:name=".activity.PostFeeds" />
        <activity android:name=".activity.FriendDetails"></activity>
    </application>

</manifest>